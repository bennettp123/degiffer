# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

[package.json]
insert_final_newline = ignore
indent_size = 2

[workspace.json]
insert_final_newline = ignore
indent_size = 2

[nx.json]
insert_final_newline = ignore
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.snap]
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

